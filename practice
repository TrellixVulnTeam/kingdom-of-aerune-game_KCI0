# shop function that displays item types
item_labels = ["Weak Potion", "Potion", "Strong Potion", "Weak Elixir", "Elixir", "Strong Elixir"]
def display_shop_menu():
    c = 1
    for item in item_labels:
        print("{}. {}".format(c, item))
        c += 1
